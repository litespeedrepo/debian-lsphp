#!/bin/sh

MATCH="^[[:space:]]*($|;)"

echo "==== Additional LSPHP 8.4 information ====" >&3
echo "" >&3
echo "++++ LSPHP 8.4 SAPI (php8.4query -S): ++++" >&3
/usr/local/lsws/lsphp84/bin/phpquery -S >&3
echo "" >&3
echo "++++ LSPHP 8.4 Extensions (php@8.4query -M -v): ++++" >&3
/usr/local/lsws/lsphp84/bin/phpquery -M -v >&3
echo "" >&3

echo "++++ Configuration files: ++++" >&3
for dsoname in @modules@; do
    inifile=${dsoname}.ini
    echo "**** /usr/local/lsws/lsphp84/etc/php/8.4/mods-available/$dsoname.ini ****" >&3
    grep -Ev "$MATCH" "/usr/local/lsws/lsphp84/etc/php/8.4/mods-available/$dsoname.ini" >&3
    echo "" >&3
done
